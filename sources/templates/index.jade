html(ng-app='app')
  meta(name='viewport' content='width=device-width, user-scalable=no')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')
  link(rel='stylesheet' href='styles/vendor.css')
  link(rel='stylesheet' href='angular-mn-number.css')
  style.
    body {
      font-family: 'Open Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
    }

body
  form(ng-controller='IndexController as controller' name='form' novalidate ng-submit='controller.validate()')
    h2 mn-number
    div
      mn-number(placeholder='Amount' ng-model='controller.amount' name='amount')

      //- p amount: {{ controller.amount }}
    
    button(type='submit') Submit

  script(src='vendor.js')
  script(src='angular-mn-number.js')
  script.
    angular.module('app', [
      'mn-number',
    ]);

    angular
      .module('app')
      .controller('IndexController', IndexController);

    function IndexController() {
      this.amount = 0

      this.validate = validate

      function validate() {
        var inputs = document.querySelectorAll('.mn-number')
        Array
          .from(inputs)
          .forEach(function(input) {
            input.validate()
          })
      }
    }

